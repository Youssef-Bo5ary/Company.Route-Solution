@using Company.Route.PL.ViewModels
@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<form action="SignUp" method="post">

			<input class="text"  asp-for="UserName" placeholder="Username"><br />
			<input class="text" asp-for="FirstName" placeholder="Email"><br />
			<input class="text"  asp-for="LastName" placeholder="Password" ><br />

			<input class="text email" type="email" asp-for="Email" placeholder="Email"><br />
			<input class="text" type="password" asp-for="Password" placeholder="Password"><br />
			<input class="text w3lpass" type="password"asp-for="ConfirmPassword" placeholder="Confirm Password">

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a href="SignIn"> Login Now!</a></p>
	</div>
</div>

