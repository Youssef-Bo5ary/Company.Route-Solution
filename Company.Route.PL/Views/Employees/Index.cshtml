@using Company.Route.PL.ViewModels

@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />
<form asp-action="Index">
    <div class="row m-5">
        <div class="col-8"> <input type="text" name="searchInput" id="searchInput" placeholder="Search By Name" class="form-control" /></div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>

<br />

<a  asp-action="Create" class="btn btn-primary"> Create a Employee</a>
<br />

